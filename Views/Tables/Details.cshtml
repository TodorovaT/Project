@model Project.Models.Table

@{
    ViewData["Title"] = "le FEIT - Details Table";
}

<h1>Details Table</h1>

<div>
    <h4>Table</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeatsNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatsNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlacementTable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacementTable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Waiter)
        </dt>
        <dd class="col-sm-10">
            @if (Model.WaiterId != null)
            {
                <a asp-controller="Waiters" asp-action="Details" asp-route-id="@Model.WaiterId">@Html.DisplayFor(model => model.Waiter.FullName)</a>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
