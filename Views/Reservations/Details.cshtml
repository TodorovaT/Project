@model Project.Models.Reservation

@{
    ViewData["Title"] = "le FEIT - Details Reservation";
}

<h1>Details Reservation</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Guest)
        </dt>
        <dd class="col-sm-10">
            @if (Model.GuestId != null)
            {
                <a asp-controller="Guests" asp-action="Details" asp-route-id="@Model.GuestId">@Html.DisplayFor(model => model.Guest.FullName)</a>
            }

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class="col-sm-10">
            @if (Model.TableId != null)
            {
                <a asp-controller="Tables" asp-action="Details" asp-route-id="@Model.TableId">@Html.DisplayFor(model => model.Table.TableNumber)</a>
            }

        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DurationReservation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DurationReservation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TableFor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TableFor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> }|
